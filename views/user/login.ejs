
<%- include('../partials/header.ejs')%>
<h1 class="text-center">Login</h1>
<div class="container w-50 p-5">
    <form action="/users/login" method="post">
        <div class="form-group p-2">
          <label for="email">Email address</label>
          <input type="email" autocomplete="none" name="email" class="form-control" required id="email" aria-describedby="emailHelp" placeholder="Enter email">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group p-2">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" required minlength="5" id="password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
    </div>
    <%- include('../partials/footer.ejs')%>


